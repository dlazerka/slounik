<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
	<id>chrome-extension</id>
	<baseDirectory></baseDirectory>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<fileSets>
			<fileSet>
					<includes>
							<include>jquery-1.6.4.min.js</include>
							<include>slounik.css</include>
							<include>slounik.html</include>
							<include>slounik.js</include>
							<include>key.pem</include>
					</includes>
					<directory>src/main/webapp</directory>
					<outputDirectory/>
			</fileSet>
			<fileSet>
					<includes>
							<include>manifest.json</include>
					</includes>
					<directory>src/main/chrome-extension</directory>
					<outputDirectory/>
			</fileSet>
			<fileSet>
					<directory>src/main/chrome-extension/icon</directory>
					<outputDirectory>icon</outputDirectory>
			</fileSet>
	</fileSets>
</assembly>
