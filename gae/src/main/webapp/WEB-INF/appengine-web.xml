<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
	<application>lazerka-slounik</application>
	<version>25-tasks-stat2</version>

	<!-- Configure serving/caching of GWT files -->
	<static-files>
		<include path="/**.html" expiration="1s"/> <!-- force reload each time -->
		<include path="/**.js" expiration="365d" /> <!-- PreDeploy script adds ETags -->
		<include path="/**.css" expiration="365d" /> <!-- PreDeploy script adds ETags -->
		<include path="favicon.ico" expiration="1d" />
	</static-files>

	<resource-files>
	</resource-files>

	<admin-console>
		<page name="My Admin" url="/" />
	</admin-console>

	<!-- Configure java.util.logging -->
	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/logging.properties" />
	</system-properties>

	<!-- Commented because Eclipse Google Plugin does not understand -->
	<threadsafe>true</threadsafe>

	<warmup-requests-enabled>true</warmup-requests-enabled>
	<inbound-services>
		<service>warmup</service>
	</inbound-services>

	<automatic-scaling>
		<min-idle-instances>0</min-idle-instances>
		<max-concurrent-requests>20</max-concurrent-requests>
	</automatic-scaling>

	<!--
	    F1    128 MB   600 Mhz $0.05
	    F2    256 MB   1.2 Ghz $0.10
	    F4    512 MB   2.4 Ghz $0.20
	    F4_1G 1024 MB  2.4 Ghz $0.30

        B1     128 MB   600 Mhz $0.05
        B2     256 MB   1.2 Ghz $0.10
        B4     512 MB   2.4 Ghz $0.20
        B4_1G  1024 MB  2.4 Ghz $0.30
        B8     1024 MB  4.8 Ghz $0.40
    -->
    <instance-class>F2</instance-class>

</appengine-web-app>
